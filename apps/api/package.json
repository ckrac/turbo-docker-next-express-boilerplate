{
	"name": "api",
	"version": "0.0.0",
	"main": "dist/src/index.js",
	"private": true,
	"scripts": {
		"dev": "nodemon",
		"build": "tsc --build tsconfig.json && tsc-alias -p tsconfig.json",
		"start": "node dist/index.js",
		"test-env-file": "env-cmd -f ./config/.test.env",
		"test": "npm run test-env-file mocha",
		"docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
		"docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build",
		"docker:ssh-api": "docker exec -it api_api_1 /bin/sh",
		"docker:ssh-db": "docker exec -it api_db_1 psql -d kakarot -U kakarot",
		"migration:create": "cd src/migrations && typeorm migration:create ",
		"migration:run": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run -d src/dataSource.ts",
		"migration:run-prod": "typeorm migration:run -d dist/src/dataSource.js",
		"migration:run-test": "POSTGRES_DB=kakarot_test npm run migration:run"
	},
	"dependencies": {
		"express": "^4.18.1",
		"morgan": "^1.10.0",
		"pg": "^8.7.3",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.6"
	},
	"devDependencies": {
		"@swc/core": "^1.2.205",
		"@swc/helpers": "^0.4.2",
		"@types/chai": "^4.3.1",
		"@types/express": "^4.17.13",
		"@types/mocha": "^9.1.1",
		"@types/morgan": "^1.9.3",
		"@types/node": "^18.0.0",
		"@types/pg": "^8.6.5",
		"@types/supertest": "^2.0.12",
		"chai": "^4.3.6",
		"env-cmd": "^10.1.0",
		"eslint": "7.32.0",
		"eslint-config-custom": "*",
		"mocha": "^10.0.0",
		"nodemon": "^2.0.18",
		"supertest": "^6.2.3",
		"ts-node": "^10.8.0",
		"tsc-alias": "^1.6.11",
		"tsconfig": "*",
		"tsconfig-paths": "^4.0.0",
		"typescript": "^4.5.3"
	}
}
