{
	"name": "api",
	"version": "0.0.0",
	"main": "index",
	"private": true,
	"scripts": {
		"dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
		"docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build",
		"docker:ssh-api": "docker exec -it api_api_1 /bin/sh",
		"docker:ssh-db": "docker exec -it api_db_1 psql -d kakarot -U kakarot",
		"migration:create": "cd src/migrations && typeorm migration:create ",
		"migration:run": "ts-node ./node_modules/.bin/typeorm migration:run -d src/dataSource.ts"
	},
	"dependencies": {
		"express": "^4.18.1",
		"morgan": "^1.10.0",
		"pg": "^8.7.3",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.6"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/morgan": "^1.9.3",
		"@types/node": "^17.0.12",
		"@types/pg": "^8.6.5",
		"eslint": "7.32.0",
		"eslint-config-custom": "*",
		"nodemon": "^2.0.16",
		"ts-node": "^10.8.0",
		"tsconfig": "*",
		"typescript": "^4.5.3"
	}
}
